<?php
include 'db.php';

$search = isset($_GET['search']) ? htmlspecialchars($_GET['search']) : "";
$condition = $search ? "AND title LIKE '%$search%'" : "";

$stmt = $pdo->prepare("SELECT * FROM journals WHERE 1=1 $condition ORDER BY date DESC");
$stmt->execute();
$journalData = $stmt->fetchAll(PDO::FETCH_ASSOC);
?>
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <title>导出日记为PDF</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            searchInput.addEventListener("input", function () {
                location.href = "export.php?search=" + searchInput.value;
            });
        });
    </script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4 text-indigo-600">导出日记为PDF</h1>
        <form method="GET" class="mb-4">
            <input type="text" name="search" id="searchInput" class="border border-gray-300 rounded w-full px-4 py-2" placeholder="输入关键词搜索日记" value="<?= $search ?>">
            <button type="submit" class="btn btn-secondary">筛选导出内容</button>
        </form>

        <div class="flex flex-wrap">
            <?php foreach ($journalData as $journal): ?>
                <div class="border border-gray-300 rounded shadow p-4 mx-2 mb-3">
                    <h3 class="text-xl font-semibold"><?= htmlspecialchars($journal['title']) ?></h3>
                    <p class="text-gray-700"><?= mb_strimwidth(htmlspecialchars($journal['content']), 0, 100, "...") ?></p>
                    <p class="text-sm text-gray-500">日期：<?= date('Y-m-d', strtotime($journal['date'])) ?></p>
                </div>
            <?php endforeach; ?>
        </div>
    </div>
</body>
</html>
