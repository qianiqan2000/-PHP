                        <a class="nav-link" href="add.php">新增日记</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="export.php" class="nav-link" onclick="return confirm('确定导出为PDF吗？')">
                            <i class="fas fa-file-pdf me-1"></i>导出为PDF
                        </a>
                    </li>
                </ul>
            </div>
            <button id="theme-toggle" class="btn btn-outline-light me-2">
                <?php echo $theme === 'dark' ? '切换为亮色模式 <i class="fas fa-sun"></i>' : '切换为暗色模式 <i class="fas fa-moon"></i>'; ?>
            </button>
        </div>
    </nav>

    <div class="container my-4">
        <div class="row g-4">
            <div class="col-sm-6 col-md-3">
                <div class="card border border-primary text-dark" style="width: 180px;">
                    <div class="card-body">
                        <h5 class="card-title">日记总数</h5>
                        <p class="card-text"><?= $totalJournals ?></p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="card border border-success text-dark" style="width: 180px;">
                    <div class="card-body">
                        <h5 class="card-title">最早日记日期</h5>
                        <p class="card-text"><?= $journalData[0]['date'] ?></p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="card border border-danger text-dark" style="width: 180px;">
                    <div class="card-body">
                        <h5 class="card-title">最新日记日期</h5>
                        <p class="card-text"><?= $journalData[count($journalData) - 1]['date'] ?></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="mb-4">我的日记</h2>
        <div class="input-group mb-4">
            <input type="text" class="form-control border border-gray-300 bg-white rounded px-4 py-2" placeholder="按标题搜索..." id="searchInput">
            <button class="btn btn-outline-secondary" onclick="filterJournals()">搜索</button>
        </div>

        <a href="export.php" class="btn btn-success mb-4" onclick="return confirm('确定导出为PDF吗？')">
            <i class="fas fa-file-pdf me-1"></i>导出为PDF
        </a>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <?php if ($journalData): ?>
                <?php foreach ($journalData as $journal): ?>
                    <div class="col">
                        <div class="card text-white bg-secondary border border-info" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title"><?= htmlspecialchars($journal['title']) ?></h5>
                                <p class="card-text"><?= mb_strimwidth(htmlspecialchars($journal['content']), 0, 100, "...") ?></p>
                                <p class="text-sm text-info"><?= date('Y-m-d', strtotime($journal['date'])) ?></p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="edit.php?id=<?= $journal['id'] ?>" class="btn btn-sm btn-warning" data-id="<?= $journal['id'] ?>" data-title="<?= htmlspecialchars($journal['title']) ?>" data-content="<?= htmlspecialchars($journal['content']) ?>" data-date="<?= date('Y-m-d', strtotime($journal['date'])) ?>">
                                        <i class="fas fa-edit me-1"></i>编辑
                                    </a>
                                    <a href="delete.php?id=<?= $journal['id'] ?>" class="btn btn-sm btn-danger" data-id="<?= $journal['id'] ?>" data-title="<?= htmlspecialchars($journal['title']) ?>" data-date="<?= date('Y-m-d', strtotime($journal['date'])) ?>">
                                        <i class="fas fa-trash-alt me-1"></i>删除
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
