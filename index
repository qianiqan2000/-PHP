            <form method="POST" action="edit.php" id="editForm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">编辑日记</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="journalId">
                        <div class="mb-3">
                            <label for="title" class="form-label">标题</label>
                            <input type="text" class="form-control" id="title" name="title" value="<?= htmlspecialchars($journal['title']) ?>" required>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">内容</label>
