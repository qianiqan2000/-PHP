    <!-- 前端 JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const currentTheme = "<?php echo $theme === 'dark' ? 'dark' : 'light'; ?>";

            // 切换主题
            document.getElementById("theme-toggle").onclick = function () {
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                document.body.classList.remove("bg-dark", "bg-light", "text-white", "text-dark");
                document.body.classList.add(newTheme === 'dark' ? 'bg-dark text-white' : 'bg-light text-dark');
                // 修改按钮内容
                document.getElementById("theme-toggle").innerHTML = newTheme === 'dark' ? '切换为亮色模式 <i class="fas fa-sun"></i>' : '切换为暗色模式 <i class="fas fa-moon"></i>';
                // 修改 Session
                $_SESSION['theme'] = newTheme;
            };

            // 数据过滤
            function filterJournals() {
                const query = document.getElementById("searchInput").value.toLowerCase();
                document.querySelectorAll(".card").forEach(card => {
                    const title = card.querySelector(".card-title").textContent.toLowerCase();
                    if (title.includes(query)) {
                        card.style.display = "";
                    } else {
                        card.style.display = "none";
                    }
                });
            }

            // 处理删除 Modal
            const deleteModal = new bootstrap.Modal(document.getElementById("deleteModal"));
            document.querySelectorAll(".btn-danger").forEach((button, index) => {
                button.addEventListener("click", function () {
                    const id = this.dataset.id;
                    const title = this.dataset.title;
                    document.getElementById("deleteTitle").textContent = `"${title}"`;
                    document.getElementById("confirmDelete").onclick = function () {
                        window.location.href = "delete.php?id=" + id;
                    };
                    deleteModal.show();
                });
            });

            // 处理编辑 Modal
            const editModal = new bootstrap.Modal(document.getElementById("editModal"));
            document.querySelectorAll(".btn-warning").forEach((button, index) => {
                button.addEventListener("click", function () {
                    const { id, title, content, date } = this.dataset;
                    document.getElementById("journalId").value = id;
                    document.getElementById("title").value = title;
                    document.getElementById("content").value = content;
                    document.getElementById("date").value = date;
                    editModal.show();
                });
            });
        });
    </script>
</body>
</html>
