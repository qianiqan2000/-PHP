$theme = isset($_SESSION['theme']) ? $_SESSION['theme'] : 'light';
require 'db.php';

// 获取所有日记
$stmt = $pdo->query("SELECT * FROM journals ORDER BY date DESC");
$journalData = $stmt->fetchAll(PDO::FETCH_ASSOC);
$totalJournals = count($journalData);
?>
